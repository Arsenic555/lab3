@using WebApplication1.Models
@model IEnumerable<Product>
@{
    ViewData["Title"] = "Конструктор";
}

    <div>
        <form asp-controller="Home" asp-action="AddItemToCatalog" method="post">
            <table>
                <tr>
                    <td> Название товара </td>
                    <td>
                        <input type="text" name="name">
                    </td>
                </tr>
                <tr>
                    <td> Описание товара </td>
                    <td>
                        <input type="text" name="desc">
                    </td>
                </tr>
                <tr>
                    <td> Цена товара </td>
                    <td>
                        <input type="text" name="price">
                    </td>
                </tr>
                <tr>
                    <td> Количество товара </td>
                    <td>
                        <input type="text" name="ammount">
                    </td>
                </tr>
                <tr>
                    <td> Путь к фотографии товара </td>
                    <td>
                        <input type="text" name="img">
                    </td>
                </tr>
                <tr>
                    <td> Артикул товара: </td>
                    <td> 000000 </td>
                </tr>
            </table>
            <input type="submit" value="Добавить в каталог">
        </form>
    </div>